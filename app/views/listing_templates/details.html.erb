  <tbody>
    <tr>
      <td>
        <%= @listing.city %>
      </td>
    
      <td>
        <%= @listing.neighborhood %>
      </td>
    
      <td>
        <%= @listing.state %>
      </td>
      
      <td>
        <%= @listing.zip_code %>
      </td>
    
      <td>
        <%= @listing.country %>
      </td>
    </tr>
  </tbody>
</table>

<br>

<!------------------- Capacity ------------------->

<h5>Capacity</h5>

<table class="table">
  <thead>
    <tr>
      <th scope="col"># of guests</th>
      <th scope="col"># of bedrooms</th>
