<h1>
  Recent Listings
</h1>

<hr>
<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Housing type
    </th>

    <th>
      # of bedrooms
    </th>

    <th>
      # of bathrooms
    </th>

    <th>
      City
    </th>
    
    <th>
      State
    </th>

    <th>
      Monthly price
    </th>

    <th>
      Available from
    </th>

    <th>
      Available till
    </th>

    <th>
      Times bookmarked
    </th>

    <th>
    </th>
  </tr>

  <% @listings.each do |listing| %>
  <tr>
    <td>
      <%= listing.id %>
    </td>

    <td>
      <%= listing.housing_type %>
    </td>

    <td>
      <%= listing.number_of_bedrooms %>
    </td>

    <td>
      <%= listing.number_of_bathrooms %>
    </td>

    <td>
      <%= listing.city %>
    </td>
    
    <td>
      <%= listing.state %>
    </td>

    <td>
      <%= listing.monthly_price %>
    </td>

    <td>
      <%= listing.available_from %>
    </td>

    <td>
      <%= listing.available_till %>
    </td>

    <td>
      <%= pluralize(listing.bookmarks.count, "bookmarks") %>
    </td>

    <td>
      <a href="/listings/<%= listing.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
